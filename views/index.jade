		#head
			.panel
				.box
					h1#logo
						svg(viewBox="0 0 16 16")
							path(stroke="#000", fill="#c70", d="M0.5,8c0,10,15,10,15,0c0-10-15-10-15,0z", stroke-linejoin="round")
