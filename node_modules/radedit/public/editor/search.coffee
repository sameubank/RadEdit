searchBox = addElement 'searchButton', 'input'

bind firstChild('searchButton'), 'click', ->
	searchBox.focus()
	searchBox.select()

bind searchBox, 'focus', ->
	clearTimeout(searchBox.t)
	flipClass searchBox, 'focus', true

bind searchBox, 'blur', ->
	searchBox.t = setTimeout(->
		flipClass searchBox, 'focus', false
	, 100)
